@section scripts {
    <script>
        // JavaScript to toggle job descriptions when "Job Description" button is clicked
        var descriptionButtons = document.querySelectorAll(".show-details");
        descriptionButtons.forEach(function (button) {
            button.addEventListener("click", function () {
                var description = this.previousElementSibling;
                description.style.display = description.style.display === "none" ? "block" : "none";
            });
        });

        // JavaScript to toggle requirements when "Requirements" button is clicked
        var requirementsButtons = document.querySelectorAll(".show-requirements");
        requirementsButtons.forEach(function (button) {
            button.addEventListener("click", function () {
                var requirements = this.previousElementSibling;
                requirements.style.display = requirements.style.display === "none" ? "block" : "none";
            });
        });
        document.getElementById("search-btn").addEventListener("click", function () {
            var searchTerm = document.getElementById("job-search").value.toLowerCase().trim();

            var jobTitles = document.querySelectorAll("h4");
            jobTitles.forEach(function (title) {
                var jobTitle = title.textContent.toLowerCase();
                var jobDiv = title.parentElement;

                if (jobTitle.includes(searchTerm)) {
                    jobDiv.style.display = "block";
                } else {
                    jobDiv.style.display = "none";
                }
            });
        });
    </script>
}
